        <div class="container">

            <form asp-action="AmazonPayment" method="post" class="form">

                <div class="row">

                    <div class="col">

                        <h3 class="title">Billing Address</h3>

                        <div class="inputBox">
                            <span>Full Name:</span>
                            <input name="fullname" type="text" placeholder="">
                        </div>
                        <div class="inputBox">
                            <span>Email:</span>
                            <input name="email" type="email" placeholder="">
                        </div>
                        <div class="inputBox">
                            <span>Address:</span>
                            <input name="address" type="text" placeholder="">
                        </div>
                        <div class="inputBox">
                            <span>City:</span>
                            <input name="city" type="text" placeholder="">
                        </div>

                        <div class="flex">
                            <div class="inputBox">
                                <span>State:</span>
                                <input name="state" type="text" placeholder="">
                            </div>
                            <div class="inputBox">
                                <span>Zip Code:</span>
                                <input name="zipcode" type="text" placeholder="">
                            </div>
                        </div>

                    </div>

                    <script>
                        function formatCreditCardNumber(input) {
                            // Sadece sayıları al
                            var inputValue = input.value.replace(/\D/g, '');

                            // 4 haneli bloklara bölecek şekilde formatla
                            var formattedValue = inputValue.replace(/(\d{4})(\d{4})(\d{4})(\d{4})/, '$1 $2 $3 $4');

                            // Formatlı değeri TextBox'a set et
                            input.value = formattedValue.trim();
                        }
                    </script>

                    <div class="col">

                        <h3 class="title">Payment</h3>

                        <div class="inputBox">
                            <span>Cards Accepted:</span>
                            <img src="~/Content/images/card_img.png" alt="">
                        </div>
                        <div class="inputBox">
                            <span>Name on Card: </span>
                            <input name="nameoncard" type="text" placeholder="">
                        </div>
                        <div class="inputBox">
                            <span>Credit Card Number:</span>
                            <input maxlength="16" name="creditcardnumber" type="text" placeholder="">
                        </div>
                        <div class="inputBox">
                            <span> Month:</span>
                            <input name="month" type="text" placeholder="">
                        </div>

                        <div class="flex">
                            <div class="inputBox">
                                <span> Year:</span>
                                <input name="year" type="number" placeholder="">
                            </div>
                            <div class="inputBox">
                                <span>CVV:</span>
                                <input name="cvv" type="text" placeholder="">
                            </div>
                        </div>

                    </div>

                </div>

                <input type="submit" value="proceed to checkout" class="submit-btn">

            </form>


